# NeuroSync API Environment Variables
# Copy this file to .env and fill in your values

# Application settings
APP_NAME=NeuroSync
APP_ENVIRONMENT=development  # development, staging, production
DEBUG=True
PORT=8000
HOST=0.0.0.0

# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neurosync
# For production with SSL: postgresql://user:password@host:port/dbname?sslmode=require

# Authentication
JWT_SECRET=replace_with_secure_random_string_at_least_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS settings
CORS_ORIGINS=http://localhost:3000,https://neurosync.ai

# Rate limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_TIMEFRAME=60  # in seconds

# Email settings (for password reset, notifications, etc.)
EMAIL_ENABLED=False
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@neurosync.ai
EMAIL_SSL=False
EMAIL_TLS=True

# Payment gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_secret_key
PAYMENT_WEBHOOK_SECRET=your_webhook_secret

# Admin settings
ADMIN_EMAIL=admin@neurosync.ai
ADMIN_PASSWORD=change_this_in_production

# AI Integration
OPENAI_API_KEY=your_openai_api_key
